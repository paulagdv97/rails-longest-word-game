<h1>New game! READY?  </h1>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter  %></li>
  <% end  %>
</ul>

<form action="/score" method="post">
  <input
    type="text"
    name="word"
    placeholder= "What's your longest word? "
    value = '<%= params[:word]%>'>
  <input type="submit" value="Come on!" class="button">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
